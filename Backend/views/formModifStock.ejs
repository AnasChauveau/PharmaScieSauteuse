                  <input type="number" class="field2" name="newNecess" value="<%=medicament.Qte_Necessaire%>" placeholder="Quantité nécessaire du médicament" required>
                </fieldset>
                <input type="submit" value="Envoyer" onclick="return confirm('Etes-vous sûr de vouloir supprimer ce poste ?');">
            </form>