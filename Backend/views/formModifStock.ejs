         <div class="height-100 bg-light">
         <div class="form-style-5">
            <form action="/PharmaScieSauteuse/Stock/Confirmation/<%=idMedic%> " method="post">
                <fieldset id="dynamic">
                  <legend class="heading">Formulaire de Modification : Stock</legend>
                  <legend><span class="number">1</span> Stock :</legend>
