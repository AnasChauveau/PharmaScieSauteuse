        <div class="height-100 bg-light">
            <canvas id="myChart">

            </canvas>
            <script>
                const ctx = document.getElementById('myChart').getContext('2d');
                const myChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin'],
                        datasets: [{
                            label: 'Nombre de Boîte de Doliprane',
                            data: [12, 19, 3, 5, 2, 3],
                            backgroundColor: [
                            'rgb(255, 0, 0)',
                            ],
                            borderColor: [
                            'rgb(255, 0, 0)',
                            ],
                            borderWidth: 1,
                        },
                        ],
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        },
                        plugins:{
                            title: {
                                font:{
                                    size: 30
                                },
                                
                                display: true,
                                text: "Graphique des besoins de la Pharmacie",
                            },
                            tooltips:{
                                enabled: false
                            },
                            legend:{
                                display: false
                            },
                        }
                    }
                });
            </script>
        </div>           
